	GuiName          "German (Switzerland, old spelling)"
 	BabelName        swissgerman
 	PolyglossiaName  german
 	PolyglossiaOpts  "spelling=old,babelshorthands=true"
# 	PolyglossiaOpts  "variant=swiss,spelling=old,babelshorthands=true"
 	QuoteStyle       danish
 	Encoding         iso8859-15
 	LangCode         de_CH
End

