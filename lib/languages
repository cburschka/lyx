Language spanish
	GuiName          "Spanish"
	HasGuiSupport    true
	BabelName        spanish
	PolyglossiaName  spanish
	QuoteStyle       french
	Encoding         iso8859-15
	LangCode         es_ES
	PostBabelPreamble
	\addto\shorthandsspanish{\spanishdeactivate{~<>}}
	EndPostBabelPreamble
End

# there are no spanish shorthands in polyglossia
Language spanish-mexico
	GuiName          "Spanish (Mexico)"
	BabelName        spanish
	PolyglossiaName  spanish
	QuoteStyle       french
	Encoding         iso8859-15
	LangCode         es_MX
	PostBabelPreamble
	\addto\shorthandsspanish{\spanishdeactivate{~<>.}}
	EndPostBabelPreamble
End

