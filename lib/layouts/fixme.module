          MenuString          "Fixme Note Options|s"
          Tooltip             "Consult the fixme package documentation for options"
        EndArgument
        Argument 2
          LabelString         "Summary"
          IsTocCaption        1
          Mandatory            1
          MenuString          "Fixme Summary"
          Tooltip             "Insert a summary of the FIXME note here"
          AutoInsert          1
        EndArgument
        Argument 3
          LabelString         "Annotated Text"
          Mandatory            1
