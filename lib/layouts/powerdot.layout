  ListName              "List of Tables"
  IsPredefined          true
  UsesFloatPkg          false
  ListCommand           listoftables
End
  
Float
  Type                  figure
  GuiName               Figure
  Extension             lof
  NumberWithin          none
  Style                 plain
  ListName              "List of Figures"
  IsPredefined          true
  UsesFloatPkg          false
