    Misc	No_Bar
  EndFont
  LabelFont
    Color	textlabel2
    Size	Small
  EndFont
  ResetsFont true
  DocBookTag      date
  DocBookAttr     role='revised'
  DocBookTagType  inline
  DocBookNoFontInside   true
End

Style Abstract
  Margin	First_Dynamic
  LatexType	Environment
  LatexName	abstract
  Category	FrontMatter
  TopSep	0.7
  BottomSep	0.7
  ParSkip	0.4
  Font
    Size	Small
  EndFont
