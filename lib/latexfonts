	Family           math
	Package          eulervm
EndFont

Font garamondx-ntxm
	GuiName          "URW Garamond (New TX)"
	Family           math
	Package          newtxmath
	PackageOption    garamondx
	Provides         amssymb,amsfonts
EndFont

Font iwona-math
	GuiName         "Iwona (Math)"
	Family          math
	Requires        iwona
	Preamble
	% store roman font
	\let\origrmdefault\rmdefault
	\usepackage[math]{iwona}
	% reset stored roman font
	\renewcommand{\rmdefault}{\origrmdefault}
	EndPreamble
EndFont

Font kurier-math
	GuiName         "Kurier (Math)"
	Family          math
	Requires        kurier
	Preamble
	% store roman font
	\let\origrmdefault\rmdefault
	\usepackage[math]{kurier}
	% reset stored roman font
	\renewcommand{\rmdefault}{\origrmdefault}
	EndPreamble
EndFont

