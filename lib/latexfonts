Font iwona-math
	GuiName         "Iwona (Math)"
	Family          math
	Requires        iwona
	Preamble
	% store roman font
	\let\origrmdefault\rmdefault
	\usepackage[math]{iwona}
	% reset stored roman font
	\renewcommand{\rmdefault}{\origrmdefault}
	EndPreamble
EndFont

